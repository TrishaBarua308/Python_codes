# Multilevel
print("Multilevel:\n")
class Grandfather:
    def __init__(self,color,first_name):
        self.color = color
        self.first_name = first_name

    def gf_fun(self):
        print("I am from grandfather.\n")


class Father(Grandfather):
    def __init__(self,hobby,color,first_name):
        super().__init__(color, first_name)
        self.hobby = hobby

    def fat_fun(self):
        print("I am from father.\n")


class Children(Father, Grandfather):
    def __init__(self,fashion, hobby, color, first_name):
        super().__init__(hobby,color, first_name)
        self.fashion = fashion


c = Children('style','cricket','blue','Barua')
print(f"\n{c.fashion},{c.hobby},{c.color},{c.first_name}\n")
c.gf_fun()
c.fat_fun()
